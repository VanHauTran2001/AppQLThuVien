<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.thu_thu.ThuThuActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Quản lý thư viện"
            android:textSize="30dp"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/btnQuanLySach"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Quản lý sách"
                android:textAllCaps="false"
                android:background="@drawable/custom_ql"
                android:textColor="@color/white"
                android:paddingRight="30dp"
                android:paddingLeft="30dp" />

            <Button
                android:id="@+id/btnQuanLyDanhMuc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Quản lý danh mục"
                android:textAllCaps="false"
                android:background="@drawable/custom_ql"
                android:textColor="@color/white"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnSachOThuVien"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sách ở thư viện"
                android:textAllCaps="false"
                android:background="@drawable/custom_ql"
                android:textColor="@color/white"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnSachDangChoThue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sách đang cho thuê"
                android:textAllCaps="false"
                android:background="@drawable/custom_ql"
                android:textColor="@color/white"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnSachSapHetHan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sách sắp hết hạn"
                android:textAllCaps="false"
                android:background="@drawable/custom_ql"
                android:textColor="@color/white"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnSachDaQuaHan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sách đã quá hạn"
                android:textAllCaps="false"
                android:background="@drawable/custom_ql"
                android:textColor="@color/white"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </RelativeLayout>
</layout>