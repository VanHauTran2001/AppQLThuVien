<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@drawable/custom_layout_sach"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Ten sach"
            android:id="@+id/txtTenSach"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Người mượn : Huy Tu"
            android:textSize="17dp"
            android:id="@+id/txtNguoiMuon"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Ngày mượn : 18/04/2001"
            android:textSize="17dp"
            android:id="@+id/txtNgayMuon"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Ngày trả : 18/04/2001"
            android:textSize="17dp"
            android:id="@+id/txtNgayTra"
            android:textColor="@color/red"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnGuiMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ql"
            android:text="Gửi mail"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout></layout>